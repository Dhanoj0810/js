const numberToCheck = 14278;
const placeNumber = 6;
let exponentialOfTen = 1;

while (exponentialOfTen <= numberToCheck) {
    exponentialOfTen = exponentialOfTen * 10;
}

for (let itrationDone = 0; itrationDone < placeNumber - 1; itrationDone++) {
    exponentialOfTen = exponentialOfTen / 10;
}
if (placeNumber >0){
    const numberGot = ((numberToCheck % exponentialOfTen) - ((numberToCheck % exponentialOfTen) % (exponentialOfTen / 10))) / (exponentialOfTen / 10);
    console.log(numberGot);
}
